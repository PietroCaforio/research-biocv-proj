{
    "wandb": {
        "project_name": "multimodal_training",
        "name": "CPTACPDA_seq_1to1"
    },
    "data": {
        "dataset_path": "./data/processed/processed_CPTAC_PDA_71_3D_sequences/",
        "patches_per_wsi": 16,
        "sampling_strategy": "consecutive-seq",
        "missing_modality_prob": 0.0,
        "require_both_modalities": true,
        "num_workers": 8,
        "train_split": "train",
        "val_split": "val",
        "pairing_mode": "one_to_one",
        "allow_repeats": false,
        "pairs_per_patient": null,
        "downsample": false,
        "histo_normalization": "imagenet"
    },
    "model": {
        "checkpoint_path": "./models/ckpts/",
        "vol_depth": 16,
        "vol_wh": 224,
        "backbone_pretrained": true,
        "backbone_grad": false,
        "backbone_unfreeze_layers": null
    },
    "training": {
        "num_epochs": 500,
        "batch_size": 8,
        "learning_rate": 0.5e-5,
        "pretrained_rad_path":"./models/pretrain_weights/r3d34_K_200ep.pth",
        "pretrained_histo_path":"./models/pretrain_weights/r3d34_K_200ep.pth",
        "checkpoint_dir": "./models/ckpts/",
        "log_interval": 1,
        "scheduler": {
            "type": "reduce_lr_on_plateau",
            "mode": "min",
            "factor": 0.1,
            "patience": 20,
            "min_lr": 1e-9
        },
        "early_stopping": {
            "patience": 10,
            "min_delta": 1e-4,
            "mode": "min"
        },
        "monitor_metric": "val_loss",
        "gpu":0
    }
}
