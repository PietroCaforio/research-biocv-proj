{
    "wandb": {
        "project_name": "multimodal_training",
        "name": "FullDatasetTraining"
    },
    "data": {
        "dataset_path": "./data/processed/processed_CPTAC_PDA_71_3D/",
        "patches_per_wsi": 66,
        "sampling_strategy": "consecutive",
        "missing_modality_prob": 0.0,
        "require_both_modalities": true,
        "num_workers": 8
    },
    "model": {
        "checkpoint_path": "./models/pretrain_weights/r3d34_K_200ep.pth",
        "vol_depth": 66,
        "vol_wh": 224
    },
    "training": {
        "num_epochs": 100,
        "batch_size": 8,
        "learning_rate": 0.001,
        "checkpoint_dir": "./models/ckpts/",
        "log_interval": 1,
        "scheduler": {
            "type": "reduce_lr_on_plateau",
            "mode": "min",
            "factor": 0.1,
            "patience": 5,
            "min_lr": 1e-6
        },
        "early_stopping": {
            "patience": 10,
            "min_delta": 1e-4,
            "mode": "min"
        },
        "monitor_metric": "val_loss"
    }
}
